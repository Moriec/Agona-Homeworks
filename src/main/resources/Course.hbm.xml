<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Agona06">
    <class name="Course" table="course">
        <id name="courseId" column="course_id">
            <generator class="identity"/>
        </id>

        <property name="courseName" column="course_name"
                  type="string" not-null="true" unique="true"/>
        <property name="credits" column="credits" type="integer" not-null="true"/>
        <property name="difficulty" column="difficulty" type="float" not-null="true"/>
        <property name="isMandatory" column="is_mandatory" type="boolean"/>

        <set name="students" table="student_course" inverse="true" lazy="true">
            <key column="course_id"/>
            <many-to-many class="Student" column="student_id"/>
        </set>
    </class>
</hibernate-mapping>